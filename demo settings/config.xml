   <item id="databaseOptions">Include_Google_Options</item>
   <item id="setupTarget">email</item>
   <!-- STEIN -->
   <item id="steinApiUrl">https://</item>
   <!-- EMAIL -->
   <item id="emailAddress">ken.q.tools@gmail.com</item>  
   <item id="emailSubject">EQ Websort Results</item>  
   <!-- SECOND PROJECT LINKING-->
   <item id="linkToSecondProject">false</item> 
   <item id="secondProjectUrl">https://</item> 
   <!-- IMAGE OPTIONS  (imageFormat: 169 or 43)-->
   <item id="useImages">false</item>
   <item id="numImages">30</item>
   <item id="imageFileType">jpg</item>
   <item id="imageFormat">postSortImageModal169</item>
